@{
    ViewData["Title"] = "RACAR - ADMIN";
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <title>RACAR</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="js/landio.min.js"></script>
    <link rel="stylesheet" href="~/css/form.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <style>
        .container {
            display: block;
            text-align: left;
            margin-left: 10px;
        }

        input {
            margin-top: 3vh;
        }

        button {
            background: rgba(255,255,255,0.3);
            color: black;
            border: 2px solid black;
            width: 200px;
            height: 40px;
            border-radius: 10px;
            margin-top: 10px;
        }

        button:hover {
            background: rgba(255,255,255,0.6);
        }
    </style>
</head>
<body>
    <div id="MyPopup" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color: black;">УВЕДОВЛЕНИЕ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6 id="lblError" style="color: black;"></h6>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h3>Добавление</h3>
        <form method="post" asp-controller="Home" asp-action="Admin" enctype="multipart/form-data">
            Выберите файл:
            <input type="file" name="image" /><br>
            <input type="text" name="brend" placeholder="бренд"><br>
            <input type="text" name="model_auto" placeholder="модель"><br>
            <input type="text" name="price" placeholder="цена"><br>
            <input type="number" name="year" placeholder="год выпуска"><br>
            <input type="text" name="kuzov" placeholder="тип кузова"><br>
            <input type="text" name="dvigatel" placeholder="тип двигателя"><br>
            <input type="text" name="volume" placeholder="объем двигателя"><br>
            <input type="text" name="kpp" placeholder="кпп: (автомат, механика, робот)"><br>
            <input type="text" name="color_auto" placeholder="цвет авто"><br>
            <input type="text" name="color_salon" placeholder="цвет салона"><br>
            <input type="text" name="material_salon" placeholder="материал салона"><br>
            <input type="submit" value="Отправить" />
        </form>
    </div>

        <form asp-controller="Home" asp-action="Delete">
            <button>Удалить</button>
        </form>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                document.querySelector("#lblError").innerHTML = '@Html.Raw(ViewBag.Message)';
                $("#MyPopup").modal("show");
            };
            </script>
        }
    </body>

</html>

